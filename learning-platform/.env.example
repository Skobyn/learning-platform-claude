# Database
DATABASE_URL="postgresql://username:password@localhost:5432/learning_platform"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-a-strong-one"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft Azure AD (optional)
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""

# Email Service (SendGrid)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"
SENDGRID_FROM_NAME="Enterprise Learning Platform"

# AWS S3 for file storage (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="learning-platform-assets"

# Cloudinary for image/video storage (alternative to S3)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# AI Services
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Payment Processing (Stripe) - for paid courses feature
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_TRACKING_ID=""

# Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Enterprise Learning Platform"
NEXT_PUBLIC_COMPANY_NAME="Your Company"

# Feature Flags
NEXT_PUBLIC_ENABLE_CERTIFICATES="true"
NEXT_PUBLIC_ENABLE_BADGES="true"
NEXT_PUBLIC_ENABLE_DISCUSSIONS="false"
NEXT_PUBLIC_ENABLE_MOBILE_APP="false"
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"

# Security Settings
ENCRYPTION_SECRET="your-encryption-secret-32-chars-min"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
SESSION_TIMEOUT_MINUTES="480"  # 8 hours

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_KEY_PREFIX="learning-platform:"

# Redis Connection Settings
REDIS_MAX_RETRIES="3"
REDIS_CONNECT_TIMEOUT="5000"
REDIS_COMMAND_TIMEOUT="5000"
REDIS_RETRY_DELAY="100"

# Cache Settings
CACHE_DEFAULT_TTL="3600"  # 1 hour default TTL
CACHE_ENABLE_COMPRESSION="true"
CACHE_MAX_MEMORY_POLICY="allkeys-lru"

# Webhook Settings
WEBHOOK_SECRET="your-webhook-secret"

# SMTP Settings (alternative to SendGrid)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@yourcompany.com"

# Development/Testing
NODE_ENV="development"
LOG_LEVEL="debug"
DISABLE_SSL_VERIFY="false"

# Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
ENABLE_ERROR_TRACKING="true"

# Content Settings
MAX_FILE_SIZE_MB="100"
ALLOWED_FILE_TYPES="pdf,doc,docx,ppt,pptx,jpg,jpeg,png,gif,mp4,mov,avi"
VIDEO_TRANSCODING_ENABLED="true"

# Localization
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,es,fr"

# Backup Settings
AUTO_BACKUP_ENABLED="true"
BACKUP_RETENTION_DAYS="90"