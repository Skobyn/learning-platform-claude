# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/learning_platform?schema=public"

# Application Configuration
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-nextauth-secret-here"
ENCRYPTION_KEY="your-32-byte-encryption-key-here!!!"

# Email Configuration (for notifications and verification)
EMAIL_FROM="noreply@yourdomain.com"
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT=587
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"

# Redis Configuration (for session management and caching)
REDIS_URL="redis://localhost:6379"

# SAML Configuration
SAML_SP_ISSUER="urn:learning-platform:sp"
SAML_CALLBACK_URL="https://yourdomain.com/api/auth/saml/callback"
SAML_LOGOUT_URL="https://yourdomain.com/api/auth/saml/logout"
SAML_LOGOUT_CALLBACK_URL="https://yourdomain.com/api/auth/saml/logout/callback"

# SAML Service Provider Certificates (base64 encoded)
SAML_SP_CERT="-----BEGIN CERTIFICATE-----\nYOUR_SP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"
SAML_SP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_SP_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Azure AD SAML Configuration
AZURE_SAML_ENTRY_POINT="https://login.microsoftonline.com/{tenant-id}/saml2"
AZURE_SAML_ISSUER="urn:learning-platform:sp"
AZURE_SAML_CERT="-----BEGIN CERTIFICATE-----\nAZURE_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# Okta SAML Configuration
OKTA_SAML_ENTRY_POINT="https://your-org.okta.com/app/your-app-id/sso/saml"
OKTA_SAML_ISSUER="http://www.okta.com/your-issuer-id"
OKTA_SAML_CERT="-----BEGIN CERTIFICATE-----\nOKTA_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# OneLogin SAML Configuration
ONELOGIN_SAML_ENTRY_POINT="https://your-org.onelogin.com/trust/saml2/http-post/sso/your-app-id"
ONELOGIN_SAML_ISSUER="urn:learning-platform:sp"
ONELOGIN_SAML_CERT="-----BEGIN CERTIFICATE-----\nONELOGIN_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# Ping Identity SAML Configuration
PING_SAML_ENTRY_POINT="https://sso.your-org.com/idp/SSO.saml2"
PING_SAML_ISSUER="urn:learning-platform:sp"
PING_SAML_CERT="-----BEGIN CERTIFICATE-----\nPING_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# ADFS SAML Configuration
ADFS_SAML_ENTRY_POINT="https://adfs.your-org.com/adfs/ls/"
ADFS_SAML_ISSUER="urn:learning-platform:sp"
ADFS_SAML_CERT="-----BEGIN CERTIFICATE-----\nADFS_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://yourdomain.com/api/auth/oauth/google/callback"

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_TENANT="common" # or your tenant ID
MICROSOFT_CALLBACK_URL="https://yourdomain.com/api/auth/oauth/microsoft/callback"

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
LINKEDIN_CALLBACK_URL="https://yourdomain.com/api/auth/oauth/linkedin/callback"

# MFA Configuration
MFA_ISSUER="Learning Platform"
MFA_BACKUP_SECRET="your-backup-code-secret-here"

# Device Trust Configuration
DEVICE_TRUST_PERIOD_DAYS=30 # 0 for never expire

# Audit Configuration
AUDIT_RETENTION_DAYS=365

# File Upload Configuration
MAX_FILE_SIZE=50 # MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,ppt,pptx,xls,xlsx,txt,mp4,mov,avi"
UPLOAD_DIR="./uploads"

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_BUCKET="your-s3-bucket"

# Video Processing (optional)
VIDEO_PROCESSING_ENABLED=false
FFMPEG_PATH="/usr/bin/ffmpeg"

# Content Security
CSP_REPORT_URI="https://yourdomain.com/api/csp-report"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# Monitoring and Logging
LOG_LEVEL="info" # debug, info, warn, error
SENTRY_DSN="your-sentry-dsn-here"

# Development/Testing
NODE_ENV="production" # development, test, production
DEBUG="false"

# Feature Flags
FEATURE_VIDEO_STREAMING=true
FEATURE_AI_CONTENT_GENERATION=false
FEATURE_BLOCKCHAIN_CERTIFICATES=false
FEATURE_ADVANCED_ANALYTICS=true