# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password_here

# For production/cloud deployments
ELASTICSEARCH_CA_CERT=/path/to/ca.crt
ELASTICSEARCH_CLIENT_CERT=/path/to/client.crt
ELASTICSEARCH_CLIENT_KEY=/path/to/client.key

# Search Configuration
ES_INDEX_COURSES=learning_platform_courses_prod
ES_INDEX_LESSONS=learning_platform_lessons_prod
ES_INDEX_RESOURCES=learning_platform_resources_prod
ES_INDEX_USERS=learning_platform_users_prod
ES_INDEX_ANALYTICS=learning_platform_search_analytics_prod

# Performance Tuning
ES_REQUEST_TIMEOUT=30000
ES_PING_TIMEOUT=3000
ES_MAX_RETRIES=3
ES_RESURRECT_STRATEGY=ping
ES_SNIFF_ON_START=false
ES_SNIFF_INTERVAL=300000

# Index Settings
ES_SHARDS=3
ES_REPLICAS=1

# Feature Flags
SEARCH_PERSONALIZATION_ENABLED=true
SEARCH_ANALYTICS_ENABLED=true
SEARCH_AUTOCOMPLETE_ENABLED=true
SEARCH_FUZZY_ENABLED=true

# Rate Limiting
SEARCH_RATE_LIMIT_WINDOW=60000
SEARCH_RATE_LIMIT_MAX=100
AUTOCOMPLETE_RATE_LIMIT_MAX=200

# Cache Settings
SEARCH_CACHE_TTL=300
POPULAR_SEARCHES_CACHE_TTL=1800