# Video Streaming Configuration
# Copy this to .env.local and fill in your values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_BUCKET_NAME=your-video-bucket
GOOGLE_CLOUD_KEY_FILE=./config/gcloud-key.json

# Cloudflare Configuration
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token
CLOUDFLARE_ZONE_NAME=yourdomain.com
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_STREAM_DOMAIN=videodelivery.net

# CDN Configuration
CDN_BASE_URL=https://your-cdn-domain.com

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Security
JWT_SECRET=your-jwt-secret-key-for-streaming-tokens

# Video Processing
MAX_CONCURRENT_TRANSCODING_JOBS=3
TEMP_VIDEO_PROCESSING_DIR=/tmp/video-processing
VIDEO_UPLOAD_MAX_SIZE=5368709120  # 5GB in bytes

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/learning_platform

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION_DAYS=15

# RabbitMQ (optional message queue)
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Analytics
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60000  # 1 minute in milliseconds

# Feature Flags
ENABLE_CLOUDFLARE_STREAM=true
ENABLE_ADAPTIVE_BITRATE=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_VIDEO_TRANSCODING=true

# Performance Tuning
FFMPEG_THREADS=2
TRANSCODING_PRIORITY=medium
STREAMING_CACHE_TTL=86400  # 24 hours

# Logging
LOG_LEVEL=info
LOG_FORMAT=json