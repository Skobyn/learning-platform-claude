# Production Environment Variables
# Copy this file to Vercel Environment Variables

# Database - Use a managed PostgreSQL service (Supabase, Neon, PlanetScale, etc.)
DATABASE_URL="postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require"

# Application
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="generate-a-secure-32-character-secret-here"
ENCRYPTION_KEY="generate-a-32-byte-encryption-key-here"

# Redis - Use Upstash Redis for Vercel
REDIS_URL="redis://default:[password]@[endpoint].upstash.io:6379"
REDIS_HOST="[endpoint].upstash.io"
REDIS_PORT="6379"
REDIS_PASSWORD="[password]"

# Email - Use SendGrid, Resend, or similar
EMAIL_FROM="noreply@yourdomain.com"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"

# Optional: Cloud Storage for file uploads
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_BUCKET=""

# Feature Flags
FEATURE_VIDEO_STREAMING=true
FEATURE_AI_CONTENT_GENERATION=false
FEATURE_BLOCKCHAIN_CERTIFICATES=false
FEATURE_ADVANCED_ANALYTICS=true

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="info"